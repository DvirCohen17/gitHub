<Window x:Class="InstallerApp.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter Server Details" Height="200" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Server IP:"/>
            <TextBox x:Name="ipTextBox" Width="250"/>
            <TextBlock Text="Server Port:" Margin="0,10,0,0"/>
            <TextBox x:Name="portTextBox" Width="250"/>
            <Button Content="OK" Width="100" HorizontalAlignment="Right" Margin="0,10,0,0" Click="OkButton_Click"/>
        </StackPanel>
    </Grid>
</Window>