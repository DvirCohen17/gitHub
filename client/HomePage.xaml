<Window x:Class="client_side.HomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:client_side"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Profile Page" Loaded="Window_Loaded"
        Background="Black" Foreground="White"
        Closing="HomePage_CloseFile">

    <Window.Resources>

        <!-- Bool to Visibility Converter -->
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />

        <!-- Inverse Bool to Visibility Converter -->
        <local:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" />
        
        <Style TargetType="TextBox" x:Key="SearchBoxStyle">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <TextBox x:Name="textBox" Text="{Binding Path=Text, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                     Background="Transparent" BorderThickness="1" Padding="5"/>
                            <TextBlock x:Name="placeholder" Text="Search users..." Foreground="Gray" Margin="5,0,0,0"
                                       VerticalAlignment="Center" IsHitTestVisible="False" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger SourceName="textBox" Property="Text" Value="">
                                <Setter TargetName="placeholder" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger SourceName="textBox" Property="Text" Value="{x:Static sys:String.Empty}">
                                <Setter TargetName="placeholder" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger SourceName="textBox" Property="Text" Value="{x:Static sys:String.Empty}">
                                <Setter TargetName="placeholder" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                            <Trigger SourceName="textBox" Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="placeholder" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Logout-->
        <Button Content="Logout" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" Margin="0,10,10,0" Click="LogoutButton_Click" />

        <!-- Profile Information Section -->
        <StackPanel Grid.Column="0" Grid.Row="0" Margin="10" Orientation="Horizontal">
            <Image Source="{Binding ProfileImage}" Width="100" Height="100" Margin="10"/>
            <StackPanel Orientation="Vertical" Margin="10">
                <TextBlock Text="{Binding UserName}" FontSize="16" FontWeight="Bold"/>
                <TextBlock Text="{Binding Email}" FontSize="14"/>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBox x:Name="BioTextBox" Text="{Binding Bio, Mode=TwoWay}" Width="300" Height="Auto" TextWrapping="Wrap" VerticalAlignment="Top" Visibility="{Binding IsCurrentUser, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    <TextBlock x:Name="BioTextBlock" Text="{Binding Bio}" Width="300" Visibility="{Binding IsCurrentUser, Converter={StaticResource InverseBoolToVisibilityConverter}}" TextWrapping="Wrap"/>
                    <Button x:Name="editButton" Content="Edit" Width="50" Height="22" Margin="5,0,0,0" Visibility="{Binding IsCurrentUser, Converter={StaticResource BoolToVisibilityConverter}}" Click="EditBio_Click"/>
                </StackPanel>
            </StackPanel>
            <Button x:Name="backButton" Content="Back" Visibility="Collapsed" Click="BackButton_Click"/>
        </StackPanel>

        <!-- Projects Section -->
        <StackPanel Grid.Column="0" Grid.Row="1" Margin="10">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                <TextBlock Text="Projects" FontSize="18" FontWeight="Bold" Margin="0,10"/>
                <Button Content="+" FontSize="18" Margin="10,0,0,0" Width="30" Click="AddProject_Click"/>
            </StackPanel>
            <ListView x:Name="lstProjects" ItemsSource="{Binding Projects}" Height="300" Background="#444444" Foreground="White" MouseDoubleClick="LstProjects_MouseDoubleClick" PreviewKeyDown="LstFiles_PreviewKeyDown">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>

        <!-- Friends List and Search Bar Section -->
        <StackPanel Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Margin="10">
            <TextBox Name="SearchBar" Width="200" Margin="0,0,0,10" Style="{StaticResource SearchBoxStyle}" 
                Background="#555555" Foreground="White" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
            <Popup Name="SearchPopup" Placement="Bottom" PlacementTarget="{Binding ElementName=SearchBar}" 
                StaysOpen="False" AllowsTransparency="True" IsOpen="{Binding IsSearchPopupOpen}">
                <Border Background="#555555" BorderBrush="Gray" BorderThickness="1">
                    <ListView ItemsSource="{Binding SearchResults}" Background="#555555" Foreground="White" MouseDoubleClick="SearchResult_MouseDoubleClick">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" Padding="5"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Border>
            </Popup>
            <ListBox x:Name="lstFriends" Height="450" Background="#444444" Foreground="White" MouseDoubleClick="LstFriends_MouseDoubleClick">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Name}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="White" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Status}" Value="Online">
                                                <Setter Property="Foreground" Value="Green" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="Offline">
                                                <Setter Property="Foreground" Value="Red" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <Button Content="X" Width="20" Height="20" Margin="5,0,0,0" Background="Transparent" Foreground="Red" BorderThickness="0" Click="RemoveFriend_Click"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </Grid>
</Window>
